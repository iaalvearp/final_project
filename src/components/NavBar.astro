<style>
    #menu {
        height: calc(100vh - 5rem);
        background: rgba(232, 247, 249, .5);
        backdrop-filter: blur(15px);
    }

    svg {
        width: 2.5rem;
        height: 2.5rem;
        cursor: pointer;
    }

    @media (width >= 1024px){
        #menu {
            left: unset;
            position: static;
            backdrop-filter: none;
            transform: translateY(0);
            background: transparent;
            height: 100%;
        }
    }
</style>

<script>
    const menu = document.getElementById('menu')
    const openBtn = document.getElementById('openBtn')
    const closeBtn = document.getElementById('closeBtn')
    const menuItems = document.querySelectorAll('#menu li a')
    const hero = document.querySelector('nav')

    const openMenu = () => {
        if (menu){
            menu.classList.remove('-translate-y-[150%]')
            menu.classList.add('translate-y-0')
        }
        openBtn?.classList.remove('scale-100')
        openBtn?.classList.add('scale-0')
        closeBtn?.classList.remove('scale-0')
        closeBtn?.classList.add('scale-100')
    }

    const closeMenu = () => {
        menu?.classList.remove('translate-y-0')
        menu?.classList.add('-translate-y-[150%]')
        openBtn?.classList.remove('scale-0')
        openBtn?.classList.add('scale-100')
        closeBtn?.classList.remove('scale-100')
        closeBtn?.classList.add('scale-0')
    }
    
    openBtn?.addEventListener('click', openMenu)
    closeBtn?.addEventListener('click', closeMenu)
    menuItems.forEach(item => item.addEventListener('click', closeMenu))

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting && hero) {
                hero.classList.remove('bg-text-secondary')
                hero.classList.add('bg-text-secondary/50')
                hero.style.backdropFilter = 'blur(8px)'

            }
        })
    }, { threshold: 0.8 })

    if(hero) {
        observer.observe(hero)
    }

    
</script>